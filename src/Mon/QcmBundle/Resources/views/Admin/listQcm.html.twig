{% extends 'MonQcmBundle::layout.html.twig' %}

 {% block page_header %}
     <div class="page-header">
         <div class="pull-right">
             <a href="{{ path('mon_qcm_admin_qcm_new') }}" class="btn btn-default">new</a>
         </div>
         <h1>Manage MCQs</h1>
     </div>
 {% endblock page_header %}

{% block content %}
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Title</td>
            <td># of Questions</td>
            <td>Created At</td>
            <td>Updated At</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
    {% for qcm in qcms %}
        <tr>
            <td>{{ qcm.title }}</td>
            <td>{{ qcm.questions | length }}</td>
            <td>{{ qcm.createdAt | localizeddate('short', 'short') }}</td>
            <td>{{ qcm.updatedAt | localizeddate('short', 'short') }}</td>
            <td>
                <a href="{{ path('mon_qcm_admin_qcm_edit', {'id': qcm.id}) }}" class="btn btn-default btn-xs">Edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5"><i>There's currently no MCQs in your database.</i></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}